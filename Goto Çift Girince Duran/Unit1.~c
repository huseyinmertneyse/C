//---------------------------------------------------------------------------

#pragma hdrstop
#include <stdio.h>
//---------------------------------------------------------------------------

#pragma argsused
int main(int argc, char* argv[])
{
        int sayi = 0, cins = 0, t = 0;
        yukari:
        printf("Lutfen Sayi Giriniz : ");
        scanf("%d",&sayi);
        cins = ((sayi % 2 == 0)?1:0);
        if(cins == 0)
        {
                t = t + sayi;
                goto yukari;
        }
        else
        {
                printf("Girdiginiz %d Sayisi Cifttir. \nGirilen teklerin toplami : %d",sayi,t);
                getchar();
                getchar();
        }
        return 0;
}
//---------------------------------------------------------------------------
 