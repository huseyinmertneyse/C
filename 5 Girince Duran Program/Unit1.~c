#include <stdio.h>
#pragma argsused
int main(int argc, char* argv[])
{
          int sayi = 0;
          while(sayi != 5)
          {
                    printf("Lutfen Bir Sayi Giriniz : ");
                    scanf("%d",&sayi);
          }
          return 0;
}
