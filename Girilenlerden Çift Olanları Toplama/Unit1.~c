//---------------------------------------------------------------------------

#pragma hdrstop
#include <stdio.h>
//---------------------------------------------------------------------------

#pragma argsused
int main(int argc, char* argv[])
{
        int flag ,i ,t = 0 ,sayi = 0;
        for(i = 0;i < 10;i++)
        {
                printf("Lutfen Sayi Giriniz : ");
                scanf("%d",&sayi);
                flag = ((sayi%2 == 0)?1:0);
                if(flag == 1)
                {
                        t = t + sayi;
                }
        }
        printf("Toplam : %d",t);
        getchar();
        getchar();
        return 0;
}
//---------------------------------------------------------------------------
 