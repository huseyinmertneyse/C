//---------------------------------------------------------------------------

#pragma hdrstop

//---------------------------------------------------------------------------

#pragma argsused
#include <stdio.h>

int main(int argc, char* argv[])
{
          int sayi = 0;
          int i,faktoriyel = 1;
          printf("Lutfen bir sayi giriniz : ");
          scanf("%d",&sayi);
          for(i = 1;i<=sayi;i++)
          {
              faktoriyel=i*faktoriyel;
              printf("%d'in Faktoriyeli %d\n",i,faktoriyel);
          }
          getchar();
          getchar();
          return 0;
}
//---------------------------------------------------------------------------
 