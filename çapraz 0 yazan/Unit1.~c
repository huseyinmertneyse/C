//---------------------------------------------------------------------------

#pragma hdrstop

#include <stdio.h>

//---------------------------------------------------------------------------

#pragma argsused
int main(int argc, char* argv[])
{
        int i , j;
        for(i = 0;i < 4;i++)
        {

                for(j = 0;j < 4;j++)
                {
                        if(i == j)
                        {
                                printf("0");
                        }
                        else if(j < i)
                        {
                                printf("2");
                        }
                        else
                        {
                                printf("1");
                        }
                }
                printf("\n");
        }
        getchar();
        getchar();
        return 0;
}
