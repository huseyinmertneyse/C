//---------------------------------------------------------------------------

#pragma hdrstop
#include <stdio.h>
//---------------------------------------------------------------------------

#pragma argsused
int main(int argc, char* argv[])
{
          int sayi = 0;
          int sayac = 0;
          int a = 1;
          int i,j;
          printf("Lutfen Sayi Girin : ");
          scanf("%d",&sayi);
          for(i = 0; i < sayi; i++)
          {
                    for(j = 0; j < a; j++)
                    {
                              sayac++;
                              printf("%d ",sayac);
                    }
                    a++;
                    printf("\n");
          }
          getchar();
          getchar();
          return 0;
}
//---------------------------------------------------------------------------
